<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ic_style">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:tint">@color/tint_image_color</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ic_style_normal">
        <item name="android:layout_height">@dimen/icon_size_normal</item>
        <item name="android:layout_width">@dimen/icon_size_normal</item>
        <item name="android:tint">@color/tint_image_color</item>
    </style>

    <style name="text_view_default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/base_text_Size</item>
        <item name="android:textColor">@color/base_text_color</item>
    </style>

    <style name="edit_text_default">
        <item name="android:layout_height">@dimen/default_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textColor">@color/base_text_color</item>
        <item name="android:textSize">@dimen/base_text_Size</item>
    </style>

    <style name="button_default">
        <item name="android:layout_height">@dimen/default_layout_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>

    <style name="devine_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/white</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>

    </style>

</resources>
