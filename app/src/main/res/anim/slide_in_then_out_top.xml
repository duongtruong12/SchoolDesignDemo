        android:duration="@integer/idle_duration"
        android:fromXScale="0%"
        android:fromYScale="0%"
        android:toXScale="0%"
        android:toYScale="0%" />
    <translate
        android:duration="1000"
        android:fromXScale="0%"
        android:fromYScale="100%"
        android:toXScale="0%"
        android:toYScale="100%" />
</set>